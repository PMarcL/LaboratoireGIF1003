#include "NombreRationnel.h"
#include <sstream>
#include <iostream>

using namespace std;

namespace labo {

NombreRationnel::NombreRationnel(int num, int denom) {
	m_num = num;
	m_denom = denom;
}

string NombreRationnel::reqFormate() const {
	ostringstream os;

	os << m_num << "/" << m_denom;

	return os.str();
}

} /* namespace labo */
