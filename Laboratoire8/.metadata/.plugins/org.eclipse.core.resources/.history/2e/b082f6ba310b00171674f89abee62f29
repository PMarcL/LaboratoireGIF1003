#ifndef SPHERE_H_
#define SPHERE_H_

namespace labo8 {

class Sphere {
public:
	Sphere();
	virtual ~Sphere();

	double reqRayon() const {
		return m_rayon;
	}

	void asgRayon(double rayon) {
		m_rayon = rayon;
	}

private:
	double m_rayon;
};

} /* namespace labo8 */

#endif /* SPHERE_H_ */
